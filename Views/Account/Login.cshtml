@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /*Login*/
main {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
}

.login-container {
    margin-top: 10%;
    background: white;
    border-radius: 10px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    padding: 20px;
    max-width: 400px;
    width: 100%;
}

.login-form {
    display: flex;
    flex-direction: column;
}

    .login-form h2 {
        margin-bottom: 20px;
        text-align: center;
        color: grey;
    }

.input-group {
    margin-bottom: 15px;
}

    .input-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .input-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-sizing: border-box;
    }

.loading {
    display: none;
    margin: 10px auto;
    border: 4px solid #f3f3f3;
    border-radius: 50%;
    border-top: 4px solid #007bff;
    width: 30px;
    height: 30px;
    animation: spin 1s linear infinite;
}

@@keyframes spin {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

.toggle-password {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
}
</style>
<div class="login-container">
    <form id="loginForm" class="login-form" action="/Account/Login" method="post">
        <input type="hidden" name="returnUrl" id="returnUrl" value="@ViewData["ReturnUrl"]" />
        @Html.AntiForgeryToken()
        <h2>Sign in your with Account</h2>
        <div class="input-group">
            <input type="text" id="UserName" name="UserName" placeholder="Username" required>
        </div>
        <div class="input-group">
            <input type="password" id="PassWord" name="PassWord" placeholder="Password" required>
            <span class="toggle-password" style="cursor: pointer;" onclick="viewPassword()">👁️</span>
        </div>
        <button type="submit" class="btn btn-outline-primary login-button">Sign in</button>
    </form>
</div>
